@using MyTextBook.Web.Models.Common.Modals
@model MyTextBook.Web.Models.TDepartments.EditTDepartmentModalViewModel
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditUser")))

<div class="modal-body">
    <form name="TDepartmentEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.TDepartment.Id" />
        <ul class="nav nav-tabs tab-nav-right" role="tablist">
            <li role="presentation" class="active"><a href="#edit-tDepartment-details" data-toggle="tab">部门编辑</a></li>           
        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane animated fadeIn active" id="edit-tDepartment-details">

                <div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="tDepartmentName" type="text" name="TDepartmentName" value="@Model.TDepartment.TDepartmentName" required maxlength="32" minlength="2" class="validate form-control">
                                <label for="tDepartmentName" class="form-label">部门</label>
                            </div>
                        </div>
                    </div>
                </div>               
                <div class="row clearfix">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="description" type="text" name="Description" value="@Model.TDepartment.Description" maxlength="256" class="validate form-control">
                                <label for="description" class="form-label">描述</label>
                            </div>
                        </div>
                    </div>
                </div>        
            </div>         
        </div>
    </form>
</div>

@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/TDepartments/_EditTDepartmentTypeModal.js" asp-append-version="true"></script>
