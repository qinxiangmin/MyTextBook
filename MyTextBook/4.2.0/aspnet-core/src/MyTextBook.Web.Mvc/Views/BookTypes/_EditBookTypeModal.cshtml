@using MyTextBook.Web.Models.Common.Modals
@model MyTextBook.Web.Models.BookTypes.EditBookTypeModalViewModel
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditUser")))

<div class="modal-body">
    <form name="BookTypeEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.Book.Id" />
        <ul class="nav nav-tabs tab-nav-right" role="tablist">
            <li role="presentation" class="active"><a href="#edit-bookType-details" data-toggle="tab">@L("UserDetails")</a></li>           
        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane animated fadeIn active" id="edit-bookType-details">

                <div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="username" type="text" name="BookTypeName" value="@Model.Book.BookTypeName" required maxlength="32" minlength="2" class="validate form-control">
                                <label for="username" class="form-label">书籍类型</label>
                            </div>
                        </div>
                    </div>
                </div>               
                <div class="row clearfix">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="email" type="text" name="BookTypeDescription" value="@Model.Book.BookTypeDescription" maxlength="256" class="validate form-control">
                                <label for="email" class="form-label">书籍描述</label>
                            </div>
                        </div>
                    </div>
                </div>        
            </div>         
        </div>
    </form>
</div>

@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/BookTypes/_EditBookTypeModal.js" asp-append-version="true"></script>
