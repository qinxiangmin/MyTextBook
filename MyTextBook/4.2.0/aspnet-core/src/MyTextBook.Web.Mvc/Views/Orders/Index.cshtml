@using MyTextBook.Web.Startup
@using Abp.Authorization.Users
@model MyTextBook.Web.Models.Orders.OrderListViewModel
@{
    // ViewData["Title"] = "Index";
}
@section scripts
    {
    <environment names="Development">
        <script src="~/view-resources/Views/StudentClasses/Index.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/view-resources/Views/StudentClasses/Index.min.js" asp-append-version="true"></script>
    </environment>
}
<h4>订单列表</h4>
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    订单列表
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a id="RefreshButton" href="javascript:void(0);" class="waves-effect waves-block"><i class="material-icons">refresh</i>@L("Refresh")</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>课程名称</th>
                            <th>图书</th>
                            <th>订购人</th>
                            <th>订单状态</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model._orderList)
                        {
                            <tr>
                                <td>@item.CourseCourseName</td>
                                <td>@item.BookBookTitle</td>
                                <td>@item.Customer</td>
                                <td>
                                    @if (@item.Confirmation == false)
                                    {
                                        <span>未处理</span>
                                    }
                                    else
                                    {
                                        <span>已处理</span>
                                    }
                                </td>
                                <td>
                                    @Html.ActionLink("教材发放", "Details", new { id = item.Id }) |
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                
            </div>
        </div>
    </div>
</div>
